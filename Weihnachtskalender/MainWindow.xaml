<Window x:Class="Weihnachtskalender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weihnachtskalender"
        mc:Ignorable="d"
        Title="Projekt-X" Height="600" Width="600">
    <Window.Resources>
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Bisque"/>
        </Style>
    </Window.Resources>
    <Canvas DataContext="{StaticResource AddDataHandler}">
        <Button x:Name="day1" Content="1" Style="{StaticResource BtnStyle}" Margin="120,170,442,369" Click="btn_Clicked" Tag="1"/>
        <Button x:Name="day2" Content="6" Style="{StaticResource BtnStyle}" Margin="195,111,367,428" Click="btn_Clicked" Tag="6"/>
        <Button x:Name="day3" Content="10" Style="{StaticResource BtnStyle}" Margin="195,60,367,479" Click="btn_Clicked" Tag="10"/>
        <Button x:Name="day4" Content="4" Style="{StaticResource BtnStyle}" Margin="120,110,442,429" Click="btn_Clicked" Tag="4"/>
        <Button x:Name="day5" Content="5" Style="{StaticResource BtnStyle}" Margin="120,60,442,479" Click="btn_Clicked" Tag="5"/>
        <TextBlock x:Name="txtBoxDate" HorizontalAlignment="Left" Height="85" TextWrapping="Wrap" Text="19" VerticalAlignment="Top" Width="95" Canvas.Left="475" Canvas.Top="35" RenderTransformOrigin="0.52,1.333" FontSize="70" Foreground="#FFE23B3B" FontWeight="Bold"/>
        <TextBlock x:Name="txtBoxInfo" HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" Text="Heute ist der" VerticalAlignment="Top" Width="195" Canvas.Left="387" Canvas.Top="10" RenderTransformOrigin="0.52,1.333" FontSize="30"/>
    </Canvas>

</Window>
