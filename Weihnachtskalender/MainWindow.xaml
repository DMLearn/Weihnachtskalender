<Window x:Class="Weihnachtskalender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weihnachtskalender"
        mc:Ignorable="d"
        Title="Projekt-X" Height="400" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="400"/>
            <ColumnDefinition Width ="400"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" x:Name="buttonGetNTPDate" Click="getNTPDate_OnClick" Content="Get Date from NTP" Width="200" FontSize="20"/>
        <Button Grid.Row="0" Grid.Column="1" x:Name="buttonGetSystemDate" Click="getSystemDate_OnClick" Content="Get Date from System" Width="200" FontSize="20"/>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="textBoxNTPDate" Visibility="Visible" Margin="10" Width="200"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="textBoxSystemDate" Visibility="Visible" Margin="10" Width="200"/>


    </Grid>
</Window>
