            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="Bisque"/>
        </Style>
    </Window.Resources>
    <Canvas DataContext="{StaticResource AddDataHandler}">
        <Button x:Name="day1" Content="1" Style="{StaticResource BtnStyle}" Click="btn_Clicked" Tag="1" Canvas.Left="415" Canvas.Top="237"/>
