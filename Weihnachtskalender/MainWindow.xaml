<Window x:Class="Weihnachtskalender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weihnachtskalender"
        mc:Ignorable="d"
        Title="Projekt-X" Height="447" Width="399">

    <Grid Margin="20" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="400"/>
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Left" Grid.Row="0" x:Name="buttonGetSystemDate" Click="getSystemDate_OnClick" Content="Get Date from System" Width="200" FontSize="20" Margin="80,0,0,0"/>
        <TextBox HorizontalAlignment="Left" Grid.Row="1" x:Name="textBoxSystemDate" Visibility="Visible" Width="200" Height="50" VerticalAlignment="Top" Margin="80,10,0,0"/>
        <ListBox HorizontalAlignment="Left" Grid.Row="1" x:Name="listBoxXML" Visibility="Visible" Width="300" Margin="25,74,0,-14"/>

    </Grid>
</Window>
