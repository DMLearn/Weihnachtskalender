<Window x:Class="Weihnachtskalender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weihnachtskalender"
        mc:Ignorable="d"
        Title="Projekt-X" Height="1097" Width="1035">
    <Window.Resources>
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily" Value="Segoe"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="Bisque"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0">
            <TextBlock x:Name="currentDateCanvas" FontSize="40" Height="60" Width="640" Background="#FFC595D8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="180"/>
        </Canvas>
        <Canvas x:Name="buttonCanvas" Grid.Row="1" Margin="0,0,0,104">
            <Image x:Name="backroundImage" Height="1005" Width="1027"/>
            <Button x:Name="day1" Content="1" Style="{StaticResource BtnStyle}" Click="btn_Clicked" Tag="1" Canvas.Left="415" Canvas.Top="237" Opacity="{Binding [0].Item2}"/>
            <Button x:Name="day2" Content="2" Style="{StaticResource BtnStyle}" Click="btn_Clicked" Tag="2" Canvas.Left="485" Canvas.Top="400" Opacity="{Binding [1].Item2}"/>
            <Button x:Name="day3" Content="3" Style="{StaticResource BtnStyle}" Click="btn_Clicked" Tag="3" Canvas.Left="335" Canvas.Top="85" Opacity="{Binding [2].Item2}"/>
