            <Button x:Name="day5" Content="5" Style="{StaticResource BtnStyle}" Click="btn_Clicked" Tag="5" Canvas.Left="420" Canvas.Top="172" Opacity="{Binding [4].Item2}"/>
            <Button x:Name="day6" Content="6" Style="{StaticResource BtnStyle}" Click="btn_Clicked" Tag="6" Canvas.Left="485" Canvas.Top="237" Opacity="{Binding [5].Item2}"/>
