<Window x:Class="Weihnachtskalender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weihnachtskalender"
        mc:Ignorable="d"
        Title="Projekt-X" Height="447" Width="500">

    <Grid Margin="20" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="400"/>
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Center" Grid.Row="0" x:Name="btnLockAddData" Click="lockAddData_OnClick" Content="Lock Add Data Folder" Width="250" Height="50" FontSize="20" Margin="0,0,0,0"/>
        <Button HorizontalAlignment="Center" Grid.Row="1" x:Name="btnUnlockAddData" Click="unlockAddData_OnClick" Content="Unlock Add Data Folder" Width="250" Height="50" FontSize="20" Margin="0,0,0,0"/>

    </Grid>
</Window>
